<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:id="@+id/pictureTextListItemContainer">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/pictureTextListItemImage"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/common_signin_btn_icon_pressed_dark" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="List Item"
        android:id="@+id/pictureTextListItemText"
        android:layout_toRightOf="@+id/pictureTextListItemImage"
        android:layout_alignTop="@+id/pictureTextListItemImage"
        android:layout_alignBottom="@+id/pictureTextListItemImage"
        android:gravity="center_vertical" />
</RelativeLayout>