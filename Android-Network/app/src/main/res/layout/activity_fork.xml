<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="elton.networker.ForkActivity"
    android:id="@+id/forkActivityContainer">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buttonContainer"
        android:layout_centerInParent="true"
        android:paddingBottom="100dp">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/addContactButton"
            android:background="@drawable/common_signin_btn_text_focus_dark"
            android:cropToPadding="false"
            android:layout_marginBottom="50dp" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/viewContactButon"
            android:background="@drawable/common_signin_btn_text_focus_dark"
            android:layout_below="@+id/addContactButton"
            android:layout_marginTop="50dp" />
    </RelativeLayout>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/addTileButton"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:background="@drawable/common_signin_btn_icon_focus_dark"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="20dp" />
</RelativeLayout>
